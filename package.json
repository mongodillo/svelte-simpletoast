{
	"name": "svelte-simpletoast",
	"description": "Simple toast notifications for Svelte",
	"author": "Marc Gregory (mongodillo@gmail.com)",
	"version": "0.4.0",
	"license": "MIT",
	"repository": "https://github.com/mongodillo/svelte-simpletoast",
	"homepage": "https://mongodillo.github.io/svelte-simpletoast/",
	"keywords": [
		"svelte",
		"toast",
		"notifications"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"vitebuild": "vite -c vite.js.config.js build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"peerDependencies": {
		"svelte": "^3.54.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.5.0",
		"@sveltejs/package": "^2.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.26.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"publint": "^0.1.9",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.0"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./dist-js": {
			"import": "./dist-js/index.es.js",
			"require": "./dist-js/index.umd.cjs"
		}
	},
	"files": [
		"dist",
		"dist-js",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"svelte": "./dist/index.js",
	"jsdelivr": "./dist-js/index.umd.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
